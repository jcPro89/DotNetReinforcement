@model IEnumerable<CompanyDepartments.Models.Department>

@{
    ViewData["Title"] = "Index";
}


<button type="button" class="btn btn-info" data-bs-toggle="modal" data-bs-target="#addDepartment" onclick="addDepartment()">
    Add Department
</button>
@*@await Html.PartialAsync("_AddDepartmentPartialView", new Department());*@

<table class="table" id="departmentsTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DepartmentName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DepartmentLocation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberOfEmployees)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DepartmentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DepartmentLocation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfEmployees)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DepartmentId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.DepartmentId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.DepartmentId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>


<script>
    function addDepartment(){
        $.ajax({
            type: "Get",
            url: "/Department/Create",
            success: function(result) {
                $("#departmentsTable").html(result);
                $("#addDepartment").modal('show');
            }
        })
    }
</script>